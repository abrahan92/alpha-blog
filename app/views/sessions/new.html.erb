<div class="container-fluid col-6 offest-3 login-form">
  <%= form_for(:session, :html => {}, url: login_path) do |s| %>
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <%= s.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <%= s.password_field :password, class: 'form-control', placeholder: 'Enter password'%>
    </div>
    <%= s.submit 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>