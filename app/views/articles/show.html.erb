<div class="container-fluid container-card col-6 offset-3">
  <h2 align="center">Title: <%= @article.title %></h2>
  <div class="card card-body bg-light col-xs-8 col-xs-offset-2">
    <h4 class="center">
      <strong>Description</strong>
    </h4>
    <hr>
    <%= simple_format(@article.description) %>

    <div class="article_actions">
      <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-info' %>
      <%= link_to 'Delete', article_path(@article), method: :delete,
                  data: {confirm: "Are you sure you want to delete this article? "}, class: 'btn btn-danger' %>
      <%= link_to 'All articles', articles_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
