<div class="container-fluid col-6 offset-3 signup_user">
  <%= render 'shared/errors', obj: @user %>
  <div class="row">
    <div class="col-12">

      <h1 class="text-center"><%= user_form_title %></h1>

      <%= form_for(@user, :html => { role: 'form'}) do |u| %>

        <div class="form-group">
          <label>Username</label>
          <%= u.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true %>
        </div>

        <div class="form-group">
          <label>Email</label>
          <%= u.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
        </div>

        <div class="form-group">
          <label>Password</label>
          <%= u.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
        </div>

        <%= u.submit submit_button, class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</div>